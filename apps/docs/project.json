{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/docs/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docusaurus build apps/docs",
          "find ./docs -name \"*.html\" -type f -exec sed -i '' 's/\\/src//g' {} +",
          "sed -i '' '/assets\\/navigation.js/d' ./docs/index.html"
        ]
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "check-spell": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cspell \"**/*.{md,mdx}\" -c ./apps/docs/cspell.json"
        ]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docusaurus start apps/docs"
        ]
      }
    }
  }
}