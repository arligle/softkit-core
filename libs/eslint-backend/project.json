{
  "name": "eslint-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/eslint-backend",
        "main": "libs/eslint-backend/src/index.js",
        "tsConfig": "libs/eslint-backend/tsconfig.lib.json",
        "assets": [
          "libs/eslint-backend/*.md"
        ],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs eslint {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "postTargets": [
          "eslint-backend:npm",
          "eslint-backend:github"
        ],
        "preset": "conventional"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "dryRun": false,
        "noBuild": true
      },
      "dependsOn": [
        "^build"
      ]
    }
  },
  "tags": []
}
