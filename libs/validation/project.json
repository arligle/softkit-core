{
  "name": "validation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/validation/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/validation",
        "tsConfig": "libs/validation/tsconfig.lib.json",
        "packageJson": "libs/validation/package.json",
        "main": "libs/validation/src/index.ts",
        "assets": [
          "libs/validation/*.md",
          {
            "glob": "**/*",
            "input": "libs/validation/src/lib/i18n/",
            "output": "i18n"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/validation/**/*.ts",
          "libs/validation/package.json",
          "libs/validation/project.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/validation/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "dependsOn": [
        "build"
      ],
      "options": {
        "postTargets": [
          "validation:npm",
          "validation:github"
        ],
        "preset": "conventional"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "dryRun": false
      }
    }
  },
  "tags": []
}
